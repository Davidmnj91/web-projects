{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["lint", "^build"],
      "outputs": [".next/**"]
    },
    "lint": {},
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"]
    }
  },
  "globalEnv": [
    "NODE_ENV",
    "APP_DOMAIN",
    "BASE_URL",
    "MAIL_USER",
    "MAIL_CLIENT_ID",
    "MAIL_CLIENT_SECRET",
    "OAUTH_REFRESH_TOKEN",
    "OAUTH_ACCESS_TOKEN",
    "OAUTH_REDIRECT_URL",
    "YOUTUBE_API_KEY",
    "YOUTUBE_CHANEL_ID",
    "GA_ID"
  ]
}
