{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":semanticCommits",
    ":preserveSemverRanges",
    "group:allNonMajor",
  ],
  "schedule": [
    "on the first day of the month"
  ],
  "dependencyDashboard": true,
  "rangeStrategy": "bump",
  "enabledManagers": ["npm"],
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2
}
