{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":semanticCommits",
    ":preserveSemverRanges",
    "group:allNonMajor",
    "schedule:monthly"
  ],
  "dependencyDashboard": true,
  "rangeStrategy": "bump",
  "enabledManagers": ["pnpm"],
  "schedule": ["on the first day of the month"],
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2
}
