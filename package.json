{
  "name": "web-projects",
  "version": "0.0.0",
  "description": "Personal web projects",
  "author": "David Manja",
  "scripts": {
    "changeset:add": "changeset add",
    "clean": "pnpm turbo clean && rimraf -g .turbo",
    "clean:modules": "rimraf -g node_modules **/node_modules",
    "commit": "git-cz",
    "format:check": "prettier \"**/*\" --list-different",
    "format:write": "prettier \"**/*\" --list-different --write",
    "lint": "eslint .  --max-warnings 0",
    "lint:fix": "eslint . --fix --max-warnings 0",
    "lint:markdown": "markdownlint \"**/*.md\" --dot --ignore node_modules --ignore .changeset",
    "pipeline:local": "pnpm turbo run lint build",
    "prepare": "husky",
    "typecheck": "tsc"
  },
  "devDependencies": {
    "@changesets/cli": "catalog:commit-hooks",
    "@commitlint/cli": "catalog:commit-hooks",
    "@commitlint/config-conventional": "catalog:commit-hooks",
    "@commitlint/cz-commitlint": "catalog:commit-hooks",
    "@web-projects/eslint": "workspace:*",
    "@web-projects/prettier": "workspace:*",
    "commitizen": "catalog:commit-hooks",
    "copyfiles": "catalog:default",
    "dotenv-cli": "catalog:default",
    "eslint": "catalog:eslint",
    "husky": "catalog:commit-hooks",
    "lint-staged": "catalog:commit-hooks",
    "markdownlint": "catalog:eslint",
    "markdownlint-cli": "catalog:eslint",
    "npm-run-all2": "catalog:default",
    "prettier": "catalog:prettier",
    "prettier-plugin-packagejson": "catalog:prettier",
    "prettier-plugin-tailwindcss": "catalog:prettier",
    "rimraf": "catalog:default",
    "turbo": "catalog:default",
    "typescript": "catalog:typescript"
  },
  "packageManager": "pnpm@10.28.0"
}
